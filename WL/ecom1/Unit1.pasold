TFloatField(ABSTable1.FieldByName('Prezzo')).DisplayFormat := '0.00';
ABSTable1.Last;
ABSTable1.Edit;
DataSource1.DataSet.Edit;
//ABSTable1.Refresh;

//inizializzazione
edit5.Text:='01/02/2014';
edit1.Text:=DateToStr(Now);
edit2.Text:='';
edit3.Text:='';
edit4.Text:='';

  {      with ABSQuery1 do   //
